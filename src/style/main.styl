*
    padding: 0
    margin: 0

#app
    background: $background-color
    width 100%
    padding-bottom 100px
    display: flex
    align-items: center
    justify-content: center

h1
    font-family: Montserrat;
    font-size: 40px;
    font-style: normal;
    font-weight: 800;
    line-height: 49px;
    letter-spacing: 0em;
    text-align: left;

    color $stressed-color
    margin-bottom 50px
    margin-top 100px

h2
    font-family: Montserrat;
    font-size: 18px;
    font-style: normal;
    font-weight: 600;
    line-height: 22px;
    letter-spacing: 0em;
    text-align: left;

h3
    font-family: Montserrat;
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: 20px;
    letter-spacing: 0em;
    text-align: left;

strong
    font-family: Montserrat;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 22px;
    letter-spacing: 0em;
    text-align: left;

    color $pale-color

p
    font-family: Montserrat;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 24px;
    letter-spacing: 0em;
    text-align: left;

input
    font-family: Montserrat;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 20px;
    letter-spacing: 0em;
    text-align: left;

    background: none
    border $default-border
    border-radius 4px
    height 58px
    width 100%
    box-sizing: border-box
    padding-left 25px
    &:focus-visible
        border-color $stressed-color
        outline 0px solid black

select
    font-family: Montserrat;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 20px;
    letter-spacing: 0em;
    text-align: left;

    border $default-border
    border-radius 4px
    height 58px
    width 100%
    box-sizing: border-box
    padding-left 25px
    &:focus-visible
        border-color $stressed-color
        outline 0px solid black

textarea
    font-family: Montserrat;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 20px;
    letter-spacing: 0em;
    text-align: left;

    border $default-border
    border-radius 4px
    min-height 190px
    width 100%
    box-sizing: border-box
    resize: none
    padding 20px 25px 0px 25px
    &:focus-visible
        border-color $stressed-color
        outline 0px solid black

button
    background: none
    cursor: pointer
    height 58px
    width 258px
    box-sizing: border-box
    border 1px solid $primary-color
    border-radius 4px
    
    display: flex
    align-items: center
    justify-content: center

    font-family: Montserrat;
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: 20px;
    letter-spacing: 0em;
    text-align: left;
    
    &:active
        background: $primary-color
        color white

    &[type="submit"]
        background: $primary-color
        color white
        &:active
            background: none
            color black

.close-btn
    position: absolute
    top: -15px;
    right: 0px;

    cursor pointer

    width 30px
    height 30px
    border-radius 15px

    background: $stressed-color

    color white
    font-size 30px
    display: flex
    align-items: center
    justify-content: center

    user-select: none